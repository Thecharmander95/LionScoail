- if @about.errors.any?
  %h2 The following errors prevented the about page from saving:
  %ul
    - @about.errors.full_messages.each do |msg|
      %li= msg
= form_for @about do |f|
  %p
    = f.label :Title
    %br/
    = f.text_field :title
  %p
    = f.label :Top_paragrath
    %br/
    = f.text_area :ltoppara
  %p
    = f.label :Version
    %br/
    =f.text_field :lchange
  %p
    = f.label :list1
    %br/
    = f.text_field :llist1
  %p
    = f.label :list2
    %br/
    = f.text_field :llist2
  %p
    = f.label :list3
    %br/
    = f.text_field :llist3
  %p
    = f.label :Github_Name_For_link
    %br/
    = f.text_field :lgithubtitle
  %p
    = f.label :Link_For_Github
    %br/
    = f.text_field :llinkgithub
  %p
    = f.label :bottom
    %br/
    = f.text_area :lbuttum
  %p
    = f.submit class: "button"
