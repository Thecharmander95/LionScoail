= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :body
    = f.text_area :body, rows: 1
  %span.picture
    (Picture or Video)
    = f.file_field :picture, accept: 'image/jpeg,image/gif,image/png,video/mp4,video/mov,video/webm', direct_upload: true

  .actions
    = f.submit 'Save', class: "button"
:javascript
  $('#post_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 50) {
      alert('Maximum file size is 50MB. Please choose a smaller file.');
    }
  });
